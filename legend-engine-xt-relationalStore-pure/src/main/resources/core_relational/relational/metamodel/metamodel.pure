import meta::external::store::relational::metamodel::relation::*;
import meta::external::store::relational::metamodel::*;


Class meta::external::store::relational::metamodel::RelationDataSelectSqlQuery extends SelectSQLQuery
{
   relation : NamedRelation[1];
   columnSubset : meta::external::store::relational::metamodel::Column[*];
}

Class meta::external::store::relational::metamodel::RelationData
{
   relation : NamedRelation[1];
   columnSubset : meta::external::store::relational::metamodel::Column[*];
   rows  :  DataRow[*];

   schema(){
      $this->match([t:Table[1] | $t.schema, v:View[1] | $v.schema])->cast(@Schema)
   }:Schema[1];

   database(){
      $this.schema().database
   }:Database[1];
}

Class meta::external::store::relational::metamodel::DataRow
{
   values : Any[*];
}

Class meta::external::store::relational::metamodel::CreateSchemaSQL extends SQLQuery
{
    schema: Schema[1];
}

Class meta::external::store::relational::metamodel::DropSchemaSQL extends SQLQuery
{
    schema: Schema[1];
}

Class meta::external::store::relational::metamodel::CreateTableSQL extends SQLQuery
{
    table: Table[1];
    applyConstraints :Boolean[0..1];
    isTempTable : Boolean[0..1];
}

Class meta::external::store::relational::metamodel::DropTableSQL extends SQLQuery
{
    table: Table[1];
}

Class meta::external::store::relational::metamodel::LoadTableSQL extends SQLQuery
{
    table: Table[1];
    columnsToLoad : Column[*];
    parsedData : List<List<String>>[0..1];
}
