import meta::external::store::relational::transform::fromPure::*;
import meta::external::store::relational::translation::*;

function meta::external::store::relational::transform::fromPure::pureTypeToDataType(t:Type[1]):meta::external::store::relational::metamodel::datatype::DataType[0..1]
{
   pureTypeToDataTypeMap()->get($t);
}

function meta::external::store::relational::transform::fromPure::pureTypeToDataType(t:Type[1], translationContext:TranslationContext[1]):meta::external::store::relational::metamodel::datatype::DataType[0..1]
{
   let dataType = pureTypeToDataTypeMap()->get($t);
   $dataType->translateCoreTypeToDbSpecificType($translationContext);
}

function meta::external::store::relational::transform::fromPure::pureTypeToDataTypeMap():Map<Type, meta::external::store::relational::metamodel::datatype::DataType>[1]
{
   newMap([
      pair(Integer, ^meta::external::store::relational::metamodel::datatype::Integer()),
      pair(Float, ^meta::external::store::relational::metamodel::datatype::Float()),
      pair(Number, ^meta::external::store::relational::metamodel::datatype::Float()),
      pair(String, ^meta::external::store::relational::metamodel::datatype::Varchar(size = 200)),
      pair(Date, ^meta::external::store::relational::metamodel::datatype::Timestamp()),
      pair(DateTime, ^meta::external::store::relational::metamodel::datatype::Timestamp()),
      pair(StrictDate, ^meta::external::store::relational::metamodel::datatype::Date()),
      pair(Boolean, ^meta::external::store::relational::metamodel::datatype::Bit())
   ]);
}